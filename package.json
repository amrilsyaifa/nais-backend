{
    "name": "naais",
    "version": "1.0.0",
    "description": "backend",
    "main": "build/index.js",
    "scripts": {
        "dev": "npm run copy-session-whatsapp && nodemon build/index.js",
        "build": "rimraf ./build && npm run copy-session-whatsapp && tsc",
        "start": "npm run build && npm run copy-session-whatsapp && node build/index.js",
        "lint": "eslint . --ext .ts",
        "lint-and-fix": "eslint . --ext .ts --fix",
        "prettier-check": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\" --config ./.prettierrc",
        "prettier-format": "prettier --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" --config ./.prettierrc",
        "copy-session-whatsapp": "cpy --cwd=src --parents '**/whatsapp-session.json' ../build/"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run prettier-format && npm run lint"
        }
    },
    "author": "naais",
    "license": "ISC",
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/compression": "^1.7.2",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16.9.1",
        "@types/uuid": "^8.3.1",
        "@types/validator": "^13.6.3",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
        "cpy-cli": "^3.1.1",
        "eslint": "^7.32.0",
        "eslint-plugin-no-loops": "^0.3.0",
        "husky": "^7.0.2",
        "nodemon": "^2.0.12",
        "prettier": "2.4.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "sequelize": "^6.6.5",
        "sequelize-typescript": "^2.1.0",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "apollo-server-core": "^3.3.0",
        "apollo-server-express": "^3.3.0",
        "bcrypt": "^5.0.1",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "graphql": "^15.5.3",
        "graphql-tag": "^2.12.5",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "pg": "^8.7.1",
        "pg-hstore": "^2.3.4",
        "qrcode-terminal": "^0.12.0",
        "socket.io": "^4.2.0",
        "uuid": "^8.3.2",
        "whatsapp-web.js": "^1.14.1"
    }
}
